<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.GestionUniversitaria.Editar.editar_Administrador">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cedulaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="99dp"
                android:text="Cedula"
                android:textSize="18sp"
                android:layout_marginStart="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/cedulaAdministrador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cedula"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp"
                android:layout_alignTop="@+id/cedulaText"
                android:layout_centerHorizontal="true" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cedulaText"
                android:layout_marginTop="20dp"
                android:id="@+id/nombrewidgetAdministrador"
                android:layout_alignStart="@+id/cedulaText">

                <EditText
                    android:id="@+id/nombreAdministrador"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:digits="ABCDEFGHIJKLMNÑOPQRSTUVWXYZabcdefghijklmnñopqrstuvwxyz "/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombrewidgetAdministrador"
                android:layout_marginTop="20dp"
                android:id="@+id/telefonoWidgetAdm"
                android:layout_alignStart="@+id/cedulaText">

                <EditText
                    android:id="@+id/telefonoAdministrador"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:hint="Telefono"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/telefonoWidgetAdm"
                android:layout_marginTop="20dp"
                android:id="@+id/emailWidgetAdm"
                android:layout_alignStart="@+id/cedulaText">

                <EditText
                    android:id="@+id/emailAdministrador"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:singleLine="true"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailWidgetAdm"
                android:layout_marginTop="20dp"
                android:id="@+id/contrasenaWidgetAdm"
                android:layout_alignStart="@+id/cedulaText">

                <EditText
                    android:id="@+id/contrasenaAdministrador"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:hint="Contraseña"
                    android:inputType="textVisiblePassword"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/botonGuardarAdministrador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contrasenaWidgetAdm"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:text="Guardar" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/avatar"
                android:layout_above="@+id/telefonoWidgetAdm"
                android:layout_alignParentStart="true"
                android:layout_marginStart="13dp"
                android:layout_marginBottom="11dp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/callanswer"
                android:layout_above="@+id/emailWidgetAdm"
                android:layout_alignStart="@+id/imageView7"
                android:layout_marginBottom="11dp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/email"
                android:layout_alignBottom="@+id/emailWidgetAdm"
                android:layout_alignStart="@+id/imageView8"
                android:layout_marginBottom="14dp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
