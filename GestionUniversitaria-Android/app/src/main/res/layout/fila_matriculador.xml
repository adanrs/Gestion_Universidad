<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layoutExpandedPro">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="7dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="0dp">

        <RelativeLayout
            android:id="@+id/layoutExpanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cedulaMatriculador"
                android:layout_marginStart="12dp"
                android:text="Cedula: " />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/nombreMatriculador"
                android:layout_below="@+id/cedulaMatriculador"
                android:layout_marginStart="12dp"

                android:text="Nombre: " />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/telefonoMatriculador"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/nombreMatriculador"
                android:layout_marginStart="12dp"
                android:text="Telefono: " />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/botonEditarMatriculador"
                android:layout_alignEnd="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/telefonoMatriculador"
                android:text="Email: " />

            <TextView
                android:id="@+id/cedulaMatriculador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/textView5"
                android:text="cedulaasadadsdasdasd"
                android:textAppearance="?attr/textAppearanceListItem" />


            <TextView
                android:id="@+id/nombreMatriculador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cedulaMatriculador"
                android:layout_below="@+id/cedulaMatriculador"
                android:text="nombre"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/telefonoMatriculador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cedulaMatriculador"
                android:layout_below="@+id/nombreMatriculador"
                android:text="Telefono"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/emailMatriculador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cedulaMatriculador"
                android:layout_below="@+id/telefonoMatriculador"
                android:text="email"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/botonEditarMatriculador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/emailMatriculador"
                android:layout_alignBottom="@+id/emailMatriculador"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="editar" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>