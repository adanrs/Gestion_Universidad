<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layoutExpandedPro">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="7dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="0dp">

        <RelativeLayout
            android:id="@+id/layoutExpanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/botonMatricularEstudiante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/cedulaEstudiante"
                android:layout_alignBottom="@+id/cedulaEstudiante"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="Matricula" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginStart="12dp"
                android:text="Cedula: " />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="12dp"
                android:text="Nombre: " />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/telefonoEstudiante"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/nombreEstudiante"
                android:layout_marginStart="12dp"
                android:text="Telefono: " />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/emailEstudiante"
                android:layout_alignEnd="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/telefonoEstudiante"
                android:text="Email: " />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/fechaNacEstudiante"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/emailEstudiante"
                android:text="Nacimiento"
                android:layout_toStartOf="@+id/emailEstudiante" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/botonEditarEstudiante"
                android:layout_alignStart="@+id/textView9"
                android:layout_below="@+id/fechaNacEstudiante"
                android:text="Carrera"
                android:layout_toStartOf="@+id/emailEstudiante" />

            <TextView
                android:id="@+id/cedulaEstudiante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"

                android:text="cedula"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_marginTop="12dp"
                android:layout_marginStart="5dp"

                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView5" />


            <TextView
                android:id="@+id/nombreEstudiante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"

                android:layout_below="@+id/cedulaEstudiante"
                android:text="nombre"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/telefonoEstudiante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_below="@+id/nombreEstudiante"
                android:text="Telefono"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/emailEstudiante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cedulaEstudiante"
                android:layout_below="@+id/telefonoEstudiante"
                android:text="email"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/fechaNacEstudiante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cedulaEstudiante"
                android:layout_below="@+id/emailEstudiante"
                android:text="12/11/2002"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/carreraEstudiante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cedulaEstudiante"
                android:layout_below="@+id/fechaNacEstudiante"
                android:text="Ingenieria"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/botonEditarEstudiante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/carreraEstudiante"
                android:layout_alignBottom="@+id/carreraEstudiante"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="editar" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>


