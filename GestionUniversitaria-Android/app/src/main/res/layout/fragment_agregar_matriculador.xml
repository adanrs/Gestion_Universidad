<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.GestionUniversitaria.Agregar.agregar_Matriculador">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:id="@+id/cedulawidgetMatriculador"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView7"
                android:layout_marginStart="21dp">

                <EditText
                    android:id="@+id/cedulaMatriculador"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:hint="Cedula"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:maxLength="20"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cedulawidgetMatriculador"
                android:layout_marginTop="20dp"
                android:id="@+id/nombrewidgetMatriculador"
                android:layout_alignStart="@+id/cedulawidgetMatriculador">

                <EditText
                    android:id="@+id/nombreMatriculador"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:digits="ABCDEFGHIJKLMNÑOPQRSTUVWXYZabcdefghijklmnñopqrstuvwxyz "/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombrewidgetMatriculador"
                android:layout_marginTop="20dp"
                android:id="@+id/telefonoWidgetMat"
                android:layout_alignStart="@+id/cedulawidgetMatriculador">

                <EditText
                    android:id="@+id/telefonoMatriculador"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:hint="Telefono"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/telefonoWidgetMat"
                android:layout_marginTop="20dp"
                android:id="@+id/emailWidgetMat"
                android:layout_alignStart="@+id/cedulawidgetMatriculador">

                <EditText
                    android:id="@+id/emailMatriculador"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailWidgetMat"
                android:layout_marginTop="20dp"
                android:id="@+id/contrasenaWidgetMat"
                android:layout_alignStart="@+id/cedulawidgetMatriculador">

                <EditText
                    android:id="@+id/contrasenaMatriculador"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:hint="Contraseña"
                    android:inputType="textVisiblePassword"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/botonGuardarMatriculador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contrasenaWidgetMat"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:text="Guardar" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/avatar"
                android:layout_above="@+id/telefonoWidgetMat"
                android:layout_alignParentStart="true"
                android:layout_marginStart="13dp"
                android:layout_marginBottom="11dp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/callanswer"
                android:layout_above="@+id/emailWidgetMat"
                android:layout_alignStart="@+id/imageView7"
                android:layout_marginBottom="11dp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/email"
                android:layout_alignBottom="@+id/emailWidgetMat"
                android:layout_alignStart="@+id/imageView8"
                android:layout_marginBottom="14dp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>